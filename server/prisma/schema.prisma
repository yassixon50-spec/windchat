generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  username  String?  @unique
  firstName String
  lastName  String?
  bio       String?
  avatar    String?
  password  String
  isOnline  Boolean  @default(false)
  lastSeen  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sentMessages     Message[]         @relation("SentMessages")
  contacts         Contact[]         @relation("UserContacts")
  contactOf        Contact[]         @relation("ContactUser")
  chatParticipants ChatParticipant[]
  blockedUsers     Block[]           @relation("BlockedByUser")
  blockedBy        Block[]           @relation("BlockedUser")
}

model Contact {
  id        String   @id @default(uuid())
  userId    String
  contactId String
  nickname  String?
  createdAt DateTime @default(now())

  user    User @relation("UserContacts", fields: [userId], references: [id], onDelete: Cascade)
  contact User @relation("ContactUser", fields: [contactId], references: [id], onDelete: Cascade)

  @@unique([userId, contactId])
}

model Block {
  id        String   @id @default(uuid())
  blockerId String   // Kim block qildi
  blockedId String   // Kim block qilindi
  createdAt DateTime @default(now())

  blocker User @relation("BlockedByUser", fields: [blockerId], references: [id], onDelete: Cascade)
  blocked User @relation("BlockedUser", fields: [blockedId], references: [id], onDelete: Cascade)

  @@unique([blockerId, blockedId])
}

model Chat {
  id        String   @id @default(uuid())
  type      String   @default("PRIVATE")
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants ChatParticipant[]
  messages     Message[]
}

model ChatParticipant {
  id       String   @id @default(uuid())
  chatId   String
  userId   String
  role     String   @default("MEMBER")
  joinedAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([chatId, userId])
}

model Message {
  id          String   @id @default(uuid())
  chatId      String
  senderId    String
  content     String?
  type        String   @default("TEXT")
  fileUrl     String?
  fileName    String?
  replyToId   String?
  forwardedFrom String?
  isPinned    Boolean  @default(false)
  isEdited    Boolean  @default(false)
  isDeleted   Boolean  @default(false)
  readBy      String   @default("[]")
  reactions   String   @default("{}") // JSON: {"‚ù§Ô∏è": ["userId1"], "üëç": ["userId2"]}
  expiresAt   DateTime? // For self-destruct messages
  scheduledAt DateTime? // For scheduled messages
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  chat    Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender  User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  replyTo Message? @relation("MessageReplies", fields: [replyToId], references: [id])
  replies Message[] @relation("MessageReplies")
}

// Channel - one-way broadcast
model Channel {
  id          String   @id @default(uuid())
  username    String   @unique
  name        String
  description String?
  avatar      String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subscribers ChannelSubscriber[]
  posts       ChannelPost[]
}

model ChannelSubscriber {
  id        String   @id @default(uuid())
  channelId String
  userId    String
  role      String   @default("SUBSCRIBER") // OWNER, ADMIN, SUBSCRIBER
  joinedAt  DateTime @default(now())

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId])
}

model ChannelPost {
  id        String   @id @default(uuid())
  channelId String
  content   String?
  type      String   @default("TEXT")
  fileUrl   String?
  views     Int      @default(0)
  reactions String   @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
}

// Poll for groups
model Poll {
  id          String   @id @default(uuid())
  chatId      String
  question    String
  options     String   // JSON array: ["Option 1", "Option 2"]
  votes       String   @default("{}") // JSON: {"0": ["userId1"], "1": ["userId2"]}
  isAnonymous Boolean  @default(false)
  isMultiple  Boolean  @default(false)
  isClosed    Boolean  @default(false)
  createdAt   DateTime @default(now())
}

// SMS Chat - tashqi telefon raqamlar bilan chat
model SMSChat {
  id          String   @id @default(uuid())
  userId      String
  phone       String
  firstName   String
  lastName    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  messages SMSMessage[]

  @@unique([userId, phone])
}

model SMSMessage {
  id        String   @id @default(uuid())
  chatId    String
  content   String
  direction String   @default("OUTGOING") // OUTGOING or INCOMING
  status    String   @default("PENDING")  // PENDING, SENT, DELIVERED, FAILED
  smsId     String?  // External SMS ID from provider
  createdAt DateTime @default(now())

  chat SMSChat @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

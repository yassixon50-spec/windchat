# Database - PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/windchat?schema=public"

# JWT - MUST CHANGE IN PRODUCTION (min 32 characters)
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="production"

# CORS - Client URL (your frontend domain)
CLIENT_URL="https://your-frontend-domain.com"

# SMS Configuration (Eskiz.uz) - Optional
SMS_API_URL="https://notify.eskiz.uz/api"
SMS_EMAIL="your-eskiz-email"
SMS_PASSWORD="your-eskiz-password"

# Cloud Storage (Optional - for file uploads)
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""
